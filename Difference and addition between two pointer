#include <iostream>
using namespace std;

int main() {
    int a=50;
    int b=100;
    int*p1=&a;
    int*p2=&b;
    
    int sum=*p1+*p2;
    cout<<"Value of a:"<<*p1<<endl;
    cout<<"Value of b:"<<*p2<<endl;
    cout<<"Sum:"<<sum<<endl;
    
    int diffrence=*p1-*p2;
    cout<<"Value of a:"<<*p1<<endl;
    cout<<"Value of b:"<<*p2<<endl;
    cout<<"diffrence:"<<diffrence<<endl;
    
  
    
  

    return 0;
}
